uct, newProduct => {\n      productQuantities.splice(0, productQuantities.length, ...Array.from({\n        length: newProduct.quantity\n      }, (_, index) => index + 1));\n    });\n    return {\n      selectedProduct: merchandiseStore.selectedProduct,\n      productQuantities,\n      selectedQuantities,\n      favoriteQuantities,\n      addToCart,\n      closeModal,\n      toggleFavorite,\n      availableQuantity\n    };\n  },\n  computed: {\n    computedProduct() {\n      const merchandiseStore = useMerchandiseStore();\n      return merchandiseStore.selectedProduct;\n    }\n  },\n  methods: {\n    //addToCart() {\n    //if (!this.isAuthenticated) {\n    // ログイン状態でない場合、ログイン画面へ遷移する\n    //this.$router.push('/login')\n    //return\n    //}\n    //const merchandiseStore = useMerchandiseStore()\n    //merchandiseStore.selectProduct(product)\n    //this.isModalVisible = true\n    //},\n    //closeModal() {\n    //this.isModalVisible = false\n    //this.$router.push('/productDetails')\n    //},\n  }\n};","map":{"version":3,"names":["useMerchandiseStore","reactive","watch","ref","onMounted","useCartStore","useFavoriteStore","useProductStore","name","data","sizes","isFavorite","isModalVisible","quantity","setup","productStore","cartStore","merchandiseStore","favoriteStore","productQuantities","selectedQuantities","favoriteQuantities","addToCart","product","productId","product_id","value","availableQuantity","productInCart","cart","find","item","quantityInCart","selectedQuantity","Array","from","length","stock","_","i","closeModal","$router","push","fetchProducts","selectedProduct","toggleFavorite","setFavoriteQuantities","newProduct","splice","index","computed","computedProduct","methods"],"sources":["/Users/kitakanta/Desktop/comvace関係/comvace6_1/src/views/ProductDetailsView.vue"],"sourcesContent":["<template>\n  <div id=\"productDetails\" class=\"product-details\">\n    <div class=\"product-details-warp\" v-if=\"selectedProduct\">\n      <div class=\"img-warp\">\n        <div class=\"img\">\n          <img :src=\"selectedProduct.image\" alt=\"ProductImage\" class=\"product-image\" />\n        </div>\n      </div>\n      <div class=\"explanatory-text-warp\">\n        <div class=\"explanatory-text\">\n          <p class=\"product-tittle\">{{ selectedProduct.product_name }}</p>\n          <div class=\"product-price\">&yen;{{ selectedProduct.price }}(税込)</div>\n        </div>\n        <div class=\"select-warp\">\n          <div class=\"size-warp\">\n            <p class=\"select-text\">サイズ</p>\n            <select class=\"dropdown-option\">\n              <option v-for=\"size in sizes\" :value=\"size\" :key=\"size\">{{ size }}</option>\n            </select>\n          </div>\n          <div class=\"favorite-wrap\">\n            <div class=\"stock-warp\">\n              <p class=\"select-text\">数量&emsp;</p>\n              <select class=\"stock-dropdown-option\" v-model=\"selectedQuantities[selectedProduct.product_id]\">\n                <option v-for=\"num in availableQuantity(selectedProduct)\" :key=\"num\">{{ num }}</option>\n              </select>\n            </div>\n            <div class=\"favorite\">\n              <div class=\"favorite-button\" :class=\"{ favorite: !isFavorite }\"></div>\n              <div class=\"favorite-border\">\n                <button\n                  :class=\"['heart', { 'favorite pink': isFavorite }, { favorite: !isFavorite }, 'favorite-button']\"\n                  @click=\"toggleFavorite(product, favoriteQuantities[product.product_id])\"\n                ></button>\n              </div>\n            </div>\n          </div>\n        </div>\n        <div class=\"button-warp\">\n          <button\n            id=\"add-to-cart\"\n            @click=\"addToCart(selectedProduct, selectedQuantities[selectedProduct.product_id])\"\n            class=\"cart-button\"\n          >\n            カートに追加\n          </button>\n        </div>\n      </div>\n    </div>\n    <div class=\"modal\" v-show=\"isModalVisib