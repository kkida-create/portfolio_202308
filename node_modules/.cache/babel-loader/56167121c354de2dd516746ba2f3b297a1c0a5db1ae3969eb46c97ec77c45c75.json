Store.removeFavoriteQuantities(selectedProduct);\n      } else {\n        favoriteStore.setFavoriteQuantities(selectedProduct, quantity);\n      }\n      isFavorite.value = !isFavorite.value;\n    }\n    onMounted(async () => {\n      await productStore.fetchProducts();\n      selectedQuantities.value[merchandiseStore.selectedProduct.product_id];\n    });\n    watch(merchandiseStore.selectedProduct, newProduct => {\n      productQuantities.splice(0, productQuantities.length, ...Array.from({\n        length: newProduct.quantity\n      }, (_, index) => index + 1));\n    });\n    watch(() => favoriteStore.favoriteQuantities, favoriteQuantities => {\n      // favoriteQuantitiesにお気に入り情報があれば、isFavoriteを更新する\n      const productId = merchandiseStore.selectedProduct.product_id;\n      isFavorite.value = !!favoriteQuantities.find(item => item.product_id === productId);\n    }, {\n      immediate: true\n    });\n    return {\n      selectedProduct: merchandiseStore.selectedProduct,\n      productQuantities,\n      selectedQuantities,\n      favoriteQuantities,\n      availableQuantity,\n      isModalVisible,\n      addToCart,\n      closeModal,\n      toggleFavorite,\n      cartPage,\n      isFavorite\n    };\n  },\n  computed: {\n    computedProduct() {\n      const merchandiseStore = useMerchandiseStore();\n      return merchandiseStore.selectedProduct;\n    }\n  }\n};","map":{"version":3,"names":["useMerchandiseStore","reactive","watch","ref","onMounted","useRouter","useCartStore","useFavoriteStore","useProductStore","name","data","sizes","quantity","setup","cartStore","merchandiseStore","favoriteStore","productStore","router","productQuantities","selectedQuantities","favoriteQuantities","isModalVisible","isFavorite","selectedProduct","addToCart","productId","product_id","value","availableQuantity","product","productInCart","cart","find","item","quantityInCart","selectedQuantity","Array","from","length","stock","_","i","closeModal","push","cartPage","toggleFavorite","remov