{"ast":null,"code":"import { computed } from 'vue';\nimport { useCartStore } from '@/store/cart.js';\nexport default {\n  setup() {\n    const cartStore = useCartStore();\n    const cart = cartStore.cart;\n    const totalQuantity = computed(() => cart.reduce((sum, item) => sum + item.quantity, 0));\n    const totalPrice = computed(() => cart.reduce((sum, item) => sum + item.price * item.quantity, 0));\n    function removeFromCart(productId) {\n      cartStore.removeFromCart(productId);\n    }\n    return {\n      cart,\n      totalQuantity,\n      totalPrice,\n      removeFromCart\n    };\n  }\n};","map":{"version":3,"names":["computed","useCartStore","setup","cartStore","cart","totalQuantity","reduce","sum","item","quantity","totalPrice","price","removeFromCart","productId"],"sources":["/Users/kitakanta/Desktop/comvace関係/comvace6_1/src/views/DisplayView.vue"],"sourcesContent":["<template>\n  <div>\n    <h1>カート一覧</h1>\n    <div v-if=\"cart.length > 0\" class=\"cart\">\n      <div class=\"cart-item\" v-for=\"item in cart\" :key=\"item.product_id\">\n        <div class=\"cart-item-info\">\n          <h2>{{ item.product_name }}</h2>\n          <p>価格: ¥{{ item.price }}</p>\n          <p>数量: {{ item.quantity }}</p>\n        </div>\n        <button @click=\"removeFromCart(item.product_id)\">削除</button>\n      </div>\n    </div>\n    <p v-else>カートは空です。</p>\n    <div class=\"cart-summary\" v-if=\"cart.length > 0\">\n      <p>合計個数: {{ totalQuantity }}個</p>\n      <p>合計金額: ¥{{ totalPrice }}</p>\n      <button>購入手続きへ</button>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { computed } from 'vue'\nimport { useCartStore } from '@/store/cart.js'\n\nexport default {\n  setup() {\n    const cartStore = useCartStore()\n    const cart = cartStore.cart\n    const totalQuantity = computed(() => cart.reduce((sum, item) => sum + item.quantity, 0))\n    const totalPrice = computed(() => cart.reduce((sum, item) => sum + item.price * item.quantity, 0))\n\n    function removeFromCart(productId) {\n      cartStore.removeFromCart(productId)\n    }\n\n    return {\n      cart,\n      totalQuantity,\n      totalPrice,\n      removeFromCart,\n    }\n  },\n}\n</script>\n\n<style scoped>\n/* your styles here */\n</style>\n"],"mappings":"AAuBA,SAASA,QAAO,QAAS,KAAI;AAC7B,SAASC,YAAW,QAAS,iBAAgB;AAE7C,eAAe;EACbC,KAAKA,CAAA,EAAG;IACN,MAAMC,SAAQ,GAAIF,YAAY,CAAC;IAC/B,MAAMG,IAAG,GAAID,SAAS,CAACC,IAAG;IAC1B,MAAMC,aAAY,GAAIL,QAAQ,CAAC,MAAMI,IAAI,CAACE,MAAM,CAAC,CAACC,GAAG,EAAEC,IAAI,KAAKD,GAAE,GAAIC,IAAI,CAACC,QAAQ,EAAE,CAAC,CAAC;IACvF,MAAMC,UAAS,GAAIV,QAAQ,CAAC,MAAMI,IAAI,CAACE,MAAM,CAAC,CAACC,GAAG,EAAEC,IAAI,KAAKD,GAAE,GAAIC,IAAI,CAACG,KAAI,GAAIH,IAAI,CAACC,QAAQ,EAAE,CAAC,CAAC;IAEjG,SAASG,cAAcA,CAACC,SAAS,EAAE;MACjCV,SAAS,CAACS,cAAc,CAACC,SAAS;IACpC;IAEA,OAAO;MACLT,IAAI;MACJC,aAAa;MACbK,UAAU;MACVE;IACF;EACF;AACF"},"metadata":{},"sourceType":"module","externalDependencies":[]}